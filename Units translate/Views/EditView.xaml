<UserControl x:Class="Units_translate.Views.EditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Units_translate.Views"
             xmlns:core="clr-namespace:Core;assembly=Core"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:stb="clr-namespace:SpellTextBox;assembly=SpellTextBox"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600" Name="root">
    <UserControl.Resources>
        <DataTemplate x:Key="CodeItemView">
            <GroupBox VerticalContentAlignment="Bottom">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FileName}" ToolTip="{Binding FullPath}"/>
                        <Button ToolTip="Показать в проводнике" Background="{x:Null}" BorderBrush="{x:Null}" Name="btnShowInExplorer" Width="16" Height="16" Margin="2" Click="btnShowInExplorer_Click">
                            <Path Stretch="Uniform" Fill="Black" Data="F1 M 20,17L 43.25,17L 56,29.75L 56,40L 52,37.5L 52,34L 39,34L 39,21L 24,21L 24,55L 36,55L 32,59L 20,59L 20,17 Z M 43,22.25L 43,30L 50.75,30L 43,22.25 Z M 48,38C 53.5228,38 58,42.4772 58,48C 58,53.5229 53.5228,58 48,58C 46.1455,58 44.4089,57.4952 42.9201,56.6155L 36.1213,63.4142C 35.3403,64.1953 34.0739,64.1953 33.2929,63.4142L 32.5858,62.7071C 31.8047,61.9261 31.8047,60.6597 32.5858,59.8787L 39.3845,53.0799C 38.5048,51.5911 38,49.8545 38,48C 38,42.4772 42.4771,38 48,38 Z M 48,42C 44.6863,42 42,44.6863 42,48C 42,51.3137 44.6863,54 48,54C 51.3137,54 54,51.3137 54,48C 54,44.6863 51.3137,42 48,42 Z"/>
                        </Button>
                        <Button ToolTip="Открыть" Background="{x:Null}" BorderBrush="{x:Null}" Name="btnOpenFile" Width="16" Height="16" Click="btnOpenFile_Click">
                            <Path Stretch="Uniform" Fill="Black" Data="F1 M 22,17L 41.25,17L 54,29.75L 54,54L 22,54L 22,17 Z M 26,21L 26,50L 50,50L 50,34L 37,34L 37,21L 26,21 Z M 41,22.25L 41,30L 48.75,30L 41,22.25 Z M 38,57C 39.6568,57 41,58.3431 41,60C 41,61.6569 39.6568,63 38,63C 36.3431,63 35,61.6569 35,60C 35,58.3431 36.3431,57 38,57 Z M 50,57C 51.6568,57 53,58.3431 53,60C 53,61.6569 51.6568,63 50,63C 48.3431,63 47,61.6569 47,60C 47,58.3431 48.3431,57 50,57 Z M 26,57C 27.6569,57 29,58.3431 29,60C 29,61.6569 27.6569,63 26,63C 24.3431,63 23,61.6569 23,60C 23,58.3431 24.3431,57 26,57 Z"/>
                        </Button>
                    </StackPanel>
                </GroupBox.Header>
                <local:SampleView UseFormat="{Binding IsChecked, ElementName=cbWrap}" Format="{Binding Text, ElementName=tbFormat}" Translation="{Binding Text, ElementName=tbTranslation}" NewValue="{Binding Text, ElementName=tbValue}" Value="{Binding DataContext.SelectedValue, ElementName=root}"/>
            </GroupBox>
        </DataTemplate>
        
        <Style TargetType="MenuItem">
            <Setter Property="Command" Value="{Binding MenuCommand, Source={x:Reference root}}"/>
            <Setter Property="CommandParameter" Value="{Binding}"/>
        </Style>
    </UserControl.Resources>
    <Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="100"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition MinWidth="200"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="42"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="*" MinHeight="42"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="*" MinHeight="42"/>
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Новое значение" Margin="2"/>
                            <Button Background="Transparent" BorderBrush="{x:Null}" Height="18" Visibility="{Binding IsSelectedValueHasAnalogs, Converter={StaticResource BoolTovis}}" Click="Button_Click">
                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding SelectedValueAnalogs}">
                                        <ContextMenu.Resources>
                                            <DataTemplate DataType="{x:Type core:MapValueRecord}">
                                                <TextBlock Text="{Binding Value}" ToolTip="{Binding Value}" MaxWidth="200"/>
                                            </DataTemplate>
                                        </ContextMenu.Resources>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <Path Fill="Black" Stretch="Uniform" Margin="2" Data="M8.2750092,2.7140188L16.550995,10.982999 10.145996,10.982999 10.145996,30.195001 6.4000092,30.195001 6.4000092,10.982999 0,10.982999z M21.854004,0L25.596008,0 25.596008,19.213008 32,19.213008 23.725006,27.486016 15.449997,19.213008 21.854004,19.213008z"/>
                            </Button>
                        </StackPanel>
                    </GroupBox.Header>
                    <TextBox Name="tbValue" SpellCheck.IsEnabled="True" 
                         Text="{Binding SelectedValue.Value, Mode=OneWay}" AcceptsTab="True" AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </GroupBox>
                <GridSplitter Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                <GroupBox Header="Перевод" Grid.Row="2">
                    <Grid>
                        <AdornerDecorator>
                            <stb:SpellTextBox Name="tbTranslation" DictionaryPath=".\dictionaries\ru_RU" IsSpellCheckEnabled="true"
                          Text="{Binding SelectedValue.Translation}" AcceptsTab="True" AcceptsReturn="True"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                          PreviewKeyUp="tbTranslation_PreviewKeyUp"/>
                        </AdornerDecorator>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button Name="btnChangeTranslation" ToolTip="Применить изменение [CTRL+ENTER]" Width="18" Height="18" Background="Transparent" BorderBrush="Transparent" Click="btnChangeTranslation_Click">
                                <Path Stretch="Uniform" Fill="#FF000000" Data="F1 M 45,46L 50,46L 50,41L 54,41L 54,46L 59,46L 59,50L 54,50L 54,55L 50,55L 50,50L 45,50L 45,46 Z M 23,50C 23,48.8954 23.8954,48 25,48L 27,48L 21.5,38L 29.25,19L 36.75,19L 44.5,38L 39,48L 41,48C 42.1045,48 43,48.8954 43,50L 43,53.5C 43,55.1568 41.1568,57 39.5,57L 26.5,57C 24.8432,57 23,55.1568 23,53.5L 23,50 Z M 33,39C 31.3431,39 30,37.6569 30,36C 30,34.6938 30.8348,33.5826 32,33.1707L 32,22L 31.3947,22.0001L 25.25,38L 30.75,48L 35.25,48L 40.75,38L 34.6052,22.0001L 34,22L 34,33.1707C 35.1652,33.5826 36,34.6938 36,36C 36,37.6569 34.6568,39 33,39 Z M 26,51L 26,52.5C 26,53.3284 26.6716,54 27.5,54L 38.5,54C 39.3284,54 40,53.3284 40,52.5L 40,51L 26,51 Z"/>
                            </Button>
                            <Button Name="btnUndoTranslation" ToolTip="Отменить изменение" Width="18" Height="18" Background="Transparent" BorderBrush="Transparent" Click="btnUndoTranslation_Click">
                                <Path Stretch="Uniform" Fill="#FF000000" Data="F1 M 45,46L 59,46L 59,50L 45,50L 45,46 Z M 23,50C 23,48.8954 23.8954,48 25,48L 27,48L 21.5,38L 29.25,19L 36.75,19L 44.5,38L 39,48L 41,48C 42.1045,48 43,48.8954 43,50L 43,53.5C 43,55.1569 41.1568,57 39.5,57L 26.5,57C 24.8432,57 23,55.1569 23,53.5L 23,50 Z M 33,39C 31.3431,39 30,37.6569 30,36C 30,34.6938 30.8348,33.5826 32,33.1708L 32,22L 31.3947,22.0001L 25.25,38L 30.75,48L 35.25,48L 40.75,38L 34.6052,22.0001L 34,22L 34,33.1707C 35.1652,33.5826 36,34.6938 36,36C 36,37.6569 34.6568,39 33,39 Z M 26,51L 26,52.5C 26,53.3284 26.6716,54 27.5,54L 38.5,54C 39.3284,54 40,53.3284 40,52.5L 40,51L 26,51 Z"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GridSplitter Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                <GroupBox Grid.Row="4">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Name="cbWrap"/>
                            <TextBlock Text="Обернуть значение" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <TextBox Name="tbFormat" AcceptsTab="True" AcceptsReturn="True" Text="tr({0})"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </GroupBox>
            </Grid>
            <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <GroupBox Grid.Column="2" Header="Предпросмотр">
                <ScrollViewer Name="scroll" VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="dataList" ItemsSource="{Binding SelectedValue.Data}" HorizontalContentAlignment="Stretch" ItemTemplate="{DynamicResource CodeItemView}"/>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Border>

</UserControl>
