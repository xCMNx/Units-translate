<Grid x:Class="Units_translate.Views.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Units_translate.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" MinHeight="19"/>
        <RowDefinition Height="3"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBox Name="tbSearch" Grid.Row="0" AcceptsReturn="True" Text="{Binding SearchText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, Delay=500}" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch"/>
    <ListBox Name="lbSearchResults" Grid.Row="2" SelectedItem="{Binding SelectedValue}" ItemsSource="{Binding SearchResults, Mode=OneWay}" DisplayMemberPath="Value" MouseDoubleClick="lbSearchResults_MouseDoubleClick"/>
</Grid>
