<UserControl x:Class="Units_translate.Views.UnitsDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Units_translate.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl>
        <TabItem Header="Units">
            <Border>
                <TextBox Text="{Binding CustomValue}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            </Border>
        </TabItem>
        <TabItem Header="Diagram">
            <TabControl ItemsPanel="{Binding Tabs}" IsSynchronizedWithCurrentItem="True">
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding Result}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </TabItem>
    </TabControl>
</UserControl>
